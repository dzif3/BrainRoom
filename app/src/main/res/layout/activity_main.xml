<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="160dp"
        >
    <ImageView
        android:layout_marginStart="132dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="top"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:background="@drawable/brain_room_biru"/>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="22.5dp"
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageViewCardHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:src="@drawable/bio"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/nama"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:text="@string/dnan_attamimi"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/kelas"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:text="@string/ipa_xii_b"
            android:layout_marginTop="50dp"
            android:layout_marginStart="90dp"
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/age"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:text="@string/_16_tahun"
            android:layout_marginTop="50dp"
            android:layout_marginStart="160dp"
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/gender"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:text="@string/jantan"
            android:layout_marginTop="50dp"
            android:layout_marginStart="230dp"
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/buttonsetting"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="300dp"
            android:background="@drawable/buttonsetting"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="22.5dp"
        android:layout_marginTop="2dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/mapel_umum"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:text="@string/mapel_umum"
            android:layout_marginTop="2dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/gray"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_fisika"
                    android:onClick="click"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/fisika_button"/>
                <TextView
                    android:id="@+id/text_fisika"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/fisika"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_biologi"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/biologi_button"/>

                <TextView
                    android:id="@+id/text_biologi"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Biologi"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_kimia"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/kimia_button"/>

                <TextView
                    android:id="@+id/text_kimia"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/kimia"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_english"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/english_button"/>

                <TextView
                    android:id="@+id/text_english"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/english"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray"
                    android:textSize="20sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_sejarah"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/sejarah_button"/>

                <TextView
                    android:id="@+id/text_sejarah"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/sejarah"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_IPS"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/geografi_button"/>

                <TextView
                    android:id="@+id/text_geografi"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/ips"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_indonesia"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/bindo_buttton"/>

                <TextView
                    android:id="@+id/text_ekonomi"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/b_indo"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="2dp"
                    android:textSize="17sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/button_matematika"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/mtk_button"/>

                <TextView
                    android:id="@+id/text_more"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/mtk"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="22.5dp"
            android:layout_marginTop="5dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="18dp"
                android:text="@string/game_education"
                android:textSize="15sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kuisfisika"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ellipse"
                    android:layout_marginStart="40dp"/>

                <ImageView
                    android:id="@+id/kuismtk"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ellipseijo"
                    android:layout_marginStart="40dp"/>
                <ImageView
                    android:id="@+id/kuisbing"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ellipseoren"
                    android:layout_marginStart="40dp"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ellipseink"
                    android:layout_marginStart="40dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="125dp"
            android:layout_height="18dp"
            android:text="@string/kisi_kisi"
            android:textSize="15sp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/kisimtk"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="22.5dp"
                android:layout_marginTop="9dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/mtk_button" />

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/matematika"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/belum"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/rightarrow" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kisifis"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="22.5dp"
                android:layout_marginTop="9dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/fisika_button" />

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/fisika"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/belum"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/rightarrow" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kisieng"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="22.5dp"
                android:layout_marginTop="9dp"
                android:background="@color/black"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/english_button" />

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/english"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/belum"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/rightarrow" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kisiindo"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="22.5dp"
                android:layout_marginTop="9dp"
                android:background="@color/black"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bindo_buttton" />

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/bahasa_indonesia"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/belum"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/rightarrow" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>