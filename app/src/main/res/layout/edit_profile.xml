<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="132dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="top"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:background="@drawable/brain_room_biru"/>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="22.5dp"
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imageViewCardHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/bio"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/nama"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:text="Dnan Attamimi"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/kelas"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:text="IPA XII B"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="90dp"
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/age"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:text="16 tahun"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="160dp"
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/gender"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:text="jantan"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="230dp"
            android:textColor="@color/gray"
            android:textSize="15sp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/myprofiletext"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:text="My profile"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/edit_profile_text"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:text="Edit profile"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="120dp"
            android:textColor="@color/biru"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="255dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="260dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:text="Full name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="18dp"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:text="Dnan Attamimi"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="330dp"
                        android:layout_height="2dp"
                        android:background="@drawable/lineabu"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:text="date of birth"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="18dp"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:text="20 March 2001"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="330dp"
                        android:layout_height="2dp"
                        android:background="@drawable/lineabu"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:text="gender"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="14dp"/>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal">

                    <CheckBox
                        android:layout_marginLeft="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                            <TextView
                                android:layout_marginLeft="12dp"
                                android:layout_width="85dp"
                                android:layout_height="20dp"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:text="laki laki"/>

                            <CheckBox
                                android:layout_marginLeft="55dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>

                            <TextView
                                android:layout_marginLeft="12dp"
                                android:layout_width="95dp"
                                android:layout_height="25dp"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:text="perempuan"/>

                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp" >

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="240dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="260dp"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/qr"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:text="QR code"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_marginLeft="105dp"
                        android:layout_marginTop="35dp"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:background="@drawable/slideright_more"/>

                </LinearLayout>

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="330dp"
                        android:layout_height="2dp"
                        android:background="@drawable/lineabu"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="28dp"
                        android:layout_width="20dp"
                        android:layout_height="28dp"
                        android:background="@drawable/dataimage"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:text="Data"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="35dp"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:background="@drawable/slideright_more"/>

                </LinearLayout>

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="330dp"
                        android:layout_height="2dp"
                        android:background="@drawable/lineabu"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="30dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/logout"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:text="Log out"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>