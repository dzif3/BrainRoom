<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="819dp"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearall">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="52dp"
            android:text="Tell us whether you are a student or a parent"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="52dp"
            android:text="STEP 1 OF 3"
            android:textColor="@color/gray"
            android:textSize="21dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="52dp"
            android:text="We want to make sure that our recommendations relate to your Age."
            android:textColor="@color/gray"
            android:textSize="19sp"
            android:textStyle="normal" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:hint="Enter username"
            android:textColorHint="@color/gray"
            android:inputType="textPersonName"
            app:endIconMode="clear_text"
            app:helperText="Required*"
            app:helperTextTextColor="@color/biru"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            app:startIconTint="@color/gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enterusername"
                android:layout_width="300dp"
                android:layout_height="45dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="78dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signupstudent"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="21dp"
                android:background="@drawable/rounded_corner"
                android:radius="41dp"
                android:text="Student"
                android:textColor="#ffff"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/signupparent"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:radius="41dp"
                android:text="parent"
                android:textColor="#ffff"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:src="@drawable/garis" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="alraedy have an account?"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/btn_sign_in"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:background="@drawable/sign_in_border"
                android:textAllCaps="false"
                android:textStyle="normal" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>