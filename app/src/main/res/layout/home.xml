                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:text="Fisika"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/gray"
                            android:textSize="20sp"/>

        </LinearLayout>
                        <LinearLayout
