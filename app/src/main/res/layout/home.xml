                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="290dp"
                    android:background="@drawable/buttonsetting"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
