                    android:layout_height="25dp"
                    android:text="Mapel umum"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/gray"
                    android:textSize="20sp"/>

        <LinearLayout
